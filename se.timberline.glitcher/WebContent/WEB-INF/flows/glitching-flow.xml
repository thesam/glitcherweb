<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="glitch" class="se.timberline.glitcher.domain.Glitch"/>
	
	<subflow-state id="identifyGlitcher" subflow="glitching/glitcher">
		<output name="glitcher" value="glitch.glitcher"/>
		<transition on="glitcherReady" to="buildGlitch"/>
	</subflow-state>
	
	<subflow-state id="buildGlitch" subflow="glitching/glitch">
		<input name="glitch" value="glitch"/>
		<transition on="glitchCreated" to="saveGlitch"/>
	</subflow-state>
	
	<action-state id="saveGlitch">
		<evaluate expression="glitchingFlowActions.saveGlitch(glitch)"/>
		<transition to="thankGlitcher"/>
	</action-state>

	<view-state id="thankGlitcher">
		<transition to="endState"/>
	</view-state>
	
	<end-state id="endState"/>

	<global-transitions>
		<transition on="cancel" to="endState"/>
	</global-transitions>

</flow>